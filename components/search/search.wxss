/* pages/components/searchs/searchs.wxss */
.search{
  background-color:white;
  padding:10rpx 0 10rpx 7rpx;
  border-radius:4rpx;
  position:relative;
  text-align:center;
  width: 100%;
}
.search input {
  width:85%;
  display:inline-block;
  font-size:28rpx;
  background-color:#EDEDED;
  border-radius:15rpx;
  text-align:left;
  padding-left:30px;
}
.searchIcon{
  position:absolute;
  top:15rpx;
  left:20px;
  width:40rpx;
  height:40rpx;
  z-index:999999;
}
.emptyValue{
  left:240px;
}
.deleteBox{
  padding-top:15px;
  padding-right:20rpx;
}
.organizeDele{
  transform:translateX(200rpx);
  transition:all 0.2s ease-in-out;
}
.delete{
  width:180rpx;
  color:#fff;
  background-color:#ff9933;
  
  display:flex;
  text-align:center;
  align-items:center;
  justify-content:center;
  line-height: 2;
  font-size: 17px;
}
.listInfo{
  flex:1;
  transform:translateX(200rpx);
  margin-left:-200rpx;
  transition:all 0.2s ease-in-out;
}
.itemInfo{
  display: flex;
  width: 100%;
  
}

.searTxt{
  font-size:28rpx;
  display:inline-block;
  text-align:center;
  width:13%;
  height:1.3rem;
  text-overflow:clip;
  overflow:hidden;
  white-space:nowrap;
  font-family:UICTFontTextStyleBody;
  min-height:1.3rem;
  background:#ff9933;
  box-sizing:border-box;
  border-radius:5px;
  color:#fff;
  margin-left:6px;
  line-height:1.5;
  padding:0;
  margin: 20rpx 0 0 0;
}