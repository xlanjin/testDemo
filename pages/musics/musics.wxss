/* 音乐标题样式*/
.swiper-tab {
  width: 100%;
  height: 80rpx;
  border-bottom: 2rpx solid #777;
  text-align: center;
  line-height: 80rpx;
   position: fixed;
    top: 0;
    left: 0;
    z-index: 100;
    display: flex;
    -webkit-box-pack: center;
    justify-content: center;
    -webkit-box-align: center;
    align-items: center;
    background: #fff;
}
.swiper-tab-list {
  font-size: 34rpx;
  display: inline-block;
  width: 33%;
  color: #777;
}
.selected {
  color: orange;
 border-bottom: 3rpx solid red;
}
.swiper-box {
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
  margin-top: 80rpx;
}
.swiper-box view {
  text-align: center;
}

