/* 方案二：表格样式 */
.td {
  width:144rpx;
  justify-content: center;
  text-align: center;
  font-size: 28rpx;
}
.navContair{
  display:flex; 
  flex-direction:row;
  justify-content:space-between;
}
.listName{
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  text-align:left;
}
.gactiveBg{
  background: #E6F3F9;
}

.table {
  border: 0px solid darkgray;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 2.6rem;
  align-items: center;
}

.bg-w{
  background: snow;
}
.th {
  width: 20%;
  background: rgb(51, 163, 255);
  color: #fff;
  height: 2.6rem;
  line-height: 2.6rem;
}