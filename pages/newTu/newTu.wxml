        <view class='listItem'>苹果</view>
      </view> -->
    </view>
    <view class='rightContair'>
       <view class='listItem' wx:for='{{listItemStyle}}' wx:key='unique'>
        <view class='listShow {{activeBtn==index?"btnGray":""}}' style='background:{{item.color}}'  data-index='{{index}}' data-rout='{{item.rout}}' ></view>
        <view class='listTitle'>{{item.title}}</view>
      </view>
    </view>
  </view>
  <!--  content  -->
  <view class='contConatir'>
    <view class='totalNumTxt'>总计</view>
    <!-- <view class='catalogue'> -->
      <!-- <view class='totalNumTxt siteText'>站点统计</view> -->
