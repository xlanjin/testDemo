<view class="detail" style="{{contentEmpty}}">
  <!-- top  -->
  <view class='topConatir'>
    <view class='leftContair' style='width:{{canvasWidth}}px;height:{{canvasHeight}}px;left:{{canvasLeft}}%'>
    <ec-canvas id="mychart-dom-multi-pie" canvas-id="mychart-multi-pie" ec="{{ ecBar }}"></ec-canvas>
