        <view class='iconTitle'>{{item.title}}</view>
      </view>
    </view> -->
  </view>
  <!--  bottom  -->
  <!-- 方案一：显示饼图图表 -->
  <view class='bottomConatir'>
    <view wx:if='{{storeLists.length!=0}}' style='height:{{bottomHeight}}rpx;'>
      <view class='storesLiist' wx:for="{{storeLists}}" wx:key='{{index}}'>
        <view style='width:340rpx;height:240rpx;display:block;'>
          <canvas class="canvas" canvas-id="ringGraph{{index}}" style='display:block;'></canvas>
        </view>
        <view class='iconTitle storesText'>{{item.name}}</view>
      </view>
    </view>
  </view>
</view>
<view class="btnFixed">
  <button class="btnChange" bindtap='activeType'>其他礼品</button>
</view>
