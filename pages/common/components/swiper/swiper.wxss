/* pages/common/components/swiper/swiper.wxss */

/* 改变轮播图圆点的位置 */
.scrollArea .wx-swiper-dot {
  position: relative;
  right: -305rpx;
}

/* 设置轮播图的图片大小 */
.scrollArea image {
  width: 100%;
  height: 376rpx;
  position: relative;
  z-index: -1;
}

/* 设置字体的背景底色以及字体大小 */
.scrollArea view {
  width: 750rpx;
  height: 64rpx;
  line-height: 64rpx;
  background-color: rgba(0, 0, 0, 0.3);
  padding: 0 20rpx;
  position: absolute;
  bottom: 0;
  left: 0;
}
.scrollArea view text {
  width: 580rpx;
  display: block;
  text-overflow: ellipsis;
  overflow-x: hidden;
  /* 设置字体超出样式 */
  white-space: nowrap;
  font-size: 28rpx;
  color: #fff;
}

/* 设置轮播图的圆点 */
.swiperDotArea {
  position: relative;
  z-index: 1;
  bottom: 40rpx;
  right: 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
}
.swiperDot {
  border-radius: 50%;
  width: 20rpx;
  height: 20rpx;
  margin: 0 10rpx;
  background-color: #fff;
}
.selectedCurrent{
  background-color: #ff7bc9;
}
