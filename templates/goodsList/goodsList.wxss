
.proList{
  overflow: hidden;
  
}
.proItem{
  width:44%;
  margin: 0 3%;
  text-align: center;
  display: inline-block;
  float: left;
  overflow: hidden;
}
.itemImg{
  width: 100%;
}
.itemPic{
  display: inline-block;
  width: 100%;
  height: 100%;
}
.pro-body{
  text-align: left;
}
.pro-title{
  color:#212121;
  font-size: 26rpx;
  line-height: 1.5;
  width: 100%;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap; 
  margin:15rpx 0;
}
.pro-desc{
  font-size:24rpx;
  line-height:1.2;
  margin-bottom: 30rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}
.pro-desc text{
  color:#ff9900;
  font-size:30rpx;
  margin:0 10rpx;
  overflow:hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.footerWord{
  display: block;
  overflow: hidden;
  clear: both;
}
.footerText{
  color:#ccc;
  text-align: center;
  font-size: 24rpx;
  margin:20rpx 0;
}
.pro-logo{
  border:solid 1rpx #eee;
  padding: 5rpx 0;
}


/* tag标签  */

.tag{
  position: absolute;
  /* right: 10rpx;
  top:10rpx; */
  right:0rpx;
  top:0rpx;
}
.tag image{
  display: inline-block;
  width:100rpx;
  height:43rpx;
}
.tag .statusBtn{
  position: absolute;
  left: 0;
  top:0;
  font-size: 22rpx;
  color:#fff;
  width: 100rpx;
  height:43rpx;
  line-height: 43rpx;
}
.statusBtn view{
  display: flex;
  justify-content: center;
  align-items: center;
}
.itemPic{
  position: relative;
}